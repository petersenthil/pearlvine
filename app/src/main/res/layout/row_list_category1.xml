<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="listCategory1RowModel" type="com.pearlvinechennai.app.modules.listcategory.data.model.ListCategory1RowModel"/>
    </data>
    <FrameLayout android:id="@+id/frame"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" style="@style/groupStylewhite_A700">
        <LinearLayout android:id="@+id/linear"
            android:layout_gravity="center|start"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_16px"
            android:layout_marginStart="@dimen/_16px"
            android:layout_marginTop="@dimen/_16px"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylewhite_A700">
            <LinearLayout android:id="@+id/linear1"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/image"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_24px"
                    android:layout_width="@dimen/_24px" android:src="@drawable/img_product_icon_24px_shirt"/>
                <TextView android:gravity="top|start"
                    android:id="@+id/txtShirt"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16px"
                    android:layout_weight="0.67"
                    android:layout_width="0dp"
                    android:text="@{listCategory1RowModel.txtShirt}" style="@style/textStylePoppinsbold12"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>
