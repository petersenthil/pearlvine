<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="offerScreen2VM" type="com.pearlvinechennai.app.modules.offerscreen2.data.viewmodel.OfferScreen2VM"/>
    </data>
    <LinearLayout android:id="@+id/linear"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_13px"
            android:layout_marginStart="@dimen/_13px" android:layout_width="match_parent">
            <LinearLayout android:id="@+id/linear1"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent"
                android:layout_width="match_parent" android:orientation="horizontal">
                <TextView android:gravity="top|start"
                    android:id="@+id/txtOffer"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.12"
                    android:layout_width="0dp"
                    android:text="@{offerScreen2VM.offerScreen2Model.txtOffer}" style="@style/textStylePoppinsbold16"/>
                <ImageView android:clickable="true"
                    android:id="@+id/image"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_24px"
                    android:layout_marginStart="@dimen/_50px"
                    android:layout_width="@dimen/_24px" android:src="@drawable/img_system_icon_24px_notification"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <ScrollView android:clipToPadding="false"
            android:fillViewport="true" android:id="@+id/scrollView"
            android:layout_height="0dp" android:layout_weight="1"
            android:layout_width="match_parent" android:paddingBottom="@dimen/_10px">
            <LinearLayout android:id="@+id/linear2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical" style="@style/groupStylewhite_A700">
                <EditText
                    android:background="@drawable/rectangle_bg_light_blue_a200_radius_5"
                    android:fontFamily="@font/poppins"
                    android:gravity="top|start"
                    android:hint="@string/msg_use_megsl_cup"
                    android:id="@+id/etUseMegslCup"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16px"
                    android:layout_marginStart="@dimen/_16px"
                    android:layout_marginTop="@dimen/_44px"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_16px"
                    android:paddingStart="@dimen/_16px"
                    android:paddingTop="@dimen/_16px"
                    android:singleLine="true"
                    android:text="@={offerScreen2VM.offerScreen2Model.etUseMegslCupValue}"
                    android:textColor="@color/white_A700"
                    android:textColorHint="@color/white_A700"
                    android:textFontWeight="700"
                    android:textSize="@dimen/_16px" android:textStyle="bold"/>
                <FrameLayout android:id="@+id/frame"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16px"
                    android:layout_marginStart="@dimen/_16px"
                    android:layout_marginTop="@dimen/_16px"
                    android:layout_width="match_parent" style="@style/groupStyle">
                    <FrameLayout android:id="@+id/frame1"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent" style="@style/groupStyle">
                        <ImageView android:id="@+id/image1"
                            android:layout_gravity="center"
                            android:layout_height="@dimen/_206px"
                            android:layout_width="match_parent"
                            android:scaleType="centerCrop"
                            cornerRadius="@{@dimen/_5px}" imageRes="@{@drawable/img_promotion_image}"/>
                        <LinearLayout android:id="@+id/linear3"
                            android:layout_gravity="center|start"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24px"
                            android:layout_width="wrap_content" android:orientation="vertical">
                            <TextView android:gravity="top|start"
                                android:id="@+id/txtSuperFlashSal"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@{offerScreen2VM.offerScreen2Model.txtSuperFlashSal}" style="@style/textStylePoppinsbold24"/>
                            <LinearLayout android:id="@+id/linear4"
                                android:layout_gravity="start"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_29px"
                                android:layout_width="wrap_content"
                                android:orientation="horizontal" style="@style/groupStyle">
                                <TextView android:gravity="top|center"
                                    android:id="@+id/txt08"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:paddingBottom="@dimen/_9px"
                                    android:paddingEnd="@dimen/_11px"
                                    android:paddingStart="@dimen/_9px"
                                    android:paddingTop="@dimen/_8px"
                                    android:text="@{offerScreen2VM.offerScreen2Model.txt08}" style="@style/textStylePoppinsbold16_1"/>
                                <TextView android:gravity="top|center"
                                    android:id="@+id/txtLbl"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_4px"
                                    android:layout_width="wrap_content"
                                    android:text="@{offerScreen2VM.offerScreen2Model.txtLbl}" style="@style/textStylePoppinsbold14_2"/>
                                <TextView android:gravity="top|center"
                                    android:id="@+id/txt34"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_4px"
                                    android:layout_width="wrap_content"
                                    android:paddingBottom="@dimen/_9px"
                                    android:paddingEnd="@dimen/_11px"
                                    android:paddingStart="@dimen/_9px"
                                    android:paddingTop="@dimen/_8px"
                                    android:text="@{offerScreen2VM.offerScreen2Model.txt34}" style="@style/textStylePoppinsbold16_1"/>
                                <TextView android:gravity="top|center"
                                    android:id="@+id/txtLbl1"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_4px"
                                    android:layout_width="wrap_content"
                                    android:text="@{offerScreen2VM.offerScreen2Model.txtLbl1}" style="@style/textStylePoppinsbold14_2"/>
                                <TextView android:gravity="top|center"
                                    android:id="@+id/txt52"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_4px"
                                    android:layout_width="wrap_content"
                                    android:paddingBottom="@dimen/_9px"
                                    android:paddingEnd="@dimen/_10px"
                                    android:paddingStart="@dimen/_11px"
                                    android:paddingTop="@dimen/_8px"
                                    android:text="@{offerScreen2VM.offerScreen2Model.txt52}" style="@style/textStylePoppinsbold16_1"/>
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>
                </FrameLayout>
                <FrameLayout android:id="@+id/frame2"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16px"
                    android:layout_marginStart="@dimen/_16px"
                    android:layout_marginTop="@dimen/_16px"
                    android:layout_width="match_parent" style="@style/groupStyle">
                    <FrameLayout android:id="@+id/frame3"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent" style="@style/groupStyle">
                        <ImageView android:id="@+id/image2"
                            android:layout_gravity="center"
                            android:layout_height="@dimen/_206px"
                            android:layout_width="match_parent"
                            android:scaleType="centerCrop"
                            cornerRadius="@{@dimen/_5px}" imageRes="@{@drawable/img_image_51}"/>
                        <LinearLayout android:id="@+id/linear5"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent" android:orientation="vertical">
                            <TextView android:gravity="top|start"
                                android:id="@+id/txt90OffSuperM"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text="@{offerScreen2VM.offerScreen2Model.txt90OffSuperM}" style="@style/textStylePoppinsbold24"/>
                            <TextView android:gravity="top|start"
                                android:id="@+id/txtSpecialBirthda"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_16px"
                                android:layout_width="match_parent"
                                android:text="@{offerScreen2VM.offerScreen2Model.txtSpecialBirthda}" style="@style/textStylePoppinsregular12_5"/>
                        </LinearLayout>
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout android:id="@+id/linear6"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylewhite_A700">
            <View android:background="@color/blue_50"
                android:id="@+id/line"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_1px" android:layout_width="match_parent"/>
            <LinearLayout android:id="@+id/linear7"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15px"
                android:layout_width="match_parent"
                android:orientation="horizontal" style="@style/groupStyle">
                <LinearLayout android:id="@+id/linear8"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:orientation="vertical" style="@style/groupStyle">
                    <ImageView android:id="@+id/image3"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="@dimen/_24px"
                        android:layout_marginEnd="@dimen/_25px"
                        android:layout_marginStart="@dimen/_25px"
                        android:layout_width="@dimen/_24px" android:src="@drawable/img_system_icon_24px_home_1"/>
                    <TextView android:gravity="top|center"
                        android:id="@+id/txtHome"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4px"
                        android:layout_width="match_parent"
                        android:text="@{offerScreen2VM.offerScreen2Model.txtHome}" style="@style/textStylePoppinsregular10"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/linear9"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:orientation="vertical" style="@style/groupStyle">
                    <ImageView android:id="@+id/image4"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="@dimen/_24px"
                        android:layout_marginEnd="@dimen/_25px"
                        android:layout_marginStart="@dimen/_25px"
                        android:layout_width="@dimen/_24px" android:src="@drawable/img_system_icon_24px_search_1"/>
                    <TextView android:gravity="top|center"
                        android:id="@+id/txtExplore"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4px"
                        android:layout_width="match_parent"
                        android:text="@{offerScreen2VM.offerScreen2Model.txtExplore}" style="@style/textStylePoppinsregular10"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/linear10"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:orientation="vertical" style="@style/groupStyle">
                    <ImageView android:id="@+id/image5"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="@dimen/_24px"
                        android:layout_marginEnd="@dimen/_25px"
                        android:layout_marginStart="@dimen/_25px"
                        android:layout_marginTop="@dimen/_10px"
                        android:layout_width="@dimen/_24px" android:src="@drawable/img_system_icon_24px_cart_1"/>
                    <TextView android:gravity="top|center"
                        android:id="@+id/txtCart"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4px"
                        android:layout_width="match_parent"
                        android:text="@{offerScreen2VM.offerScreen2Model.txtCart}" style="@style/textStylePoppinsregular10"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/linear11"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:orientation="vertical" style="@style/groupStyle">
                    <ImageView android:id="@+id/image6"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="@dimen/_24px"
                        android:layout_marginEnd="@dimen/_25px"
                        android:layout_marginStart="@dimen/_25px"
                        android:layout_width="@dimen/_24px" android:src="@drawable/img_system_icon_24px_offer_1"/>
                    <TextView android:gravity="top|center"
                        android:id="@+id/txtOffer1"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4px"
                        android:layout_width="match_parent"
                        android:text="@{offerScreen2VM.offerScreen2Model.txtOffer1}" style="@style/textStylePoppinsbold10_1"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/linear12"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:orientation="vertical" style="@style/groupStyle">
                    <ImageView android:id="@+id/image7"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="@dimen/_24px"
                        android:layout_marginEnd="@dimen/_25px"
                        android:layout_marginStart="@dimen/_25px"
                        android:layout_width="@dimen/_24px" android:src="@drawable/img_group_9"/>
                    <TextView android:gravity="top|center"
                        android:id="@+id/txtAccount"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4px"
                        android:layout_width="match_parent"
                        android:text="@{offerScreen2VM.offerScreen2Model.txtAccount}" style="@style/textStylePoppinsregular10"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
