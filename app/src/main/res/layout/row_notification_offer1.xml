<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="notificationOffer1RowModel" type="com.pearlvinechennai.app.modules.notificationoffer.data.model.NotificationOffer1RowModel"/>
    </data>
    <LinearLayout android:id="@+id/linear"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal" style="@style/groupStylewhite_A700">
        <ImageView android:id="@+id/image" android:layout_gravity="top"
            android:layout_height="@dimen/_24px"
            android:layout_marginStart="@dimen/_16px"
            android:layout_width="@dimen/_24px" android:src="@drawable/img_system_icon_24px_offer_1"/>
        <LinearLayout android:id="@+id/linear1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12px"
            android:layout_weight="0.85" android:layout_width="0dp"
            android:orientation="vertical" style="@style/groupStyle">
            <TextView android:gravity="top|start"
                android:id="@+id/txtTheBestTitle"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@{notificationOffer1RowModel.txtTheBestTitle}" style="@style/textStylePoppinsbold14_3"/>
            <TextView android:gravity="top|start"
                android:id="@+id/txtCulpaCillumCo"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8px"
                android:layout_width="match_parent"
                android:text="@{notificationOffer1RowModel.txtCulpaCillumCo}" style="@style/textStylePoppinsregular12"/>
            <TextView android:gravity="top|start"
                android:id="@+id/txtApril302014"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8px"
                android:layout_width="match_parent"
                android:text="@{notificationOffer1RowModel.txtApril302014}" style="@style/textStylePoppinsregular10_1"/>
        </LinearLayout>
    </LinearLayout>
</layout>
